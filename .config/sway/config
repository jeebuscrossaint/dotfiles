# common bindings
bindsym $mod+q exec $term
bindsym $mod+d exec $menu
bindsym $mod+c kill
bindsym $mod+Shift+c reload
bindsym $mod+l exec $control
floating_modifier $mod normal
bindsym $mod+g exec $wallpaper

# more bindings
